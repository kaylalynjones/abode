.back
  a.fui-arrow-left(href='/#/house') &nbsp Back
.title
  h4.text-center Extras
.row
  .col-xs-1
  .col-xs-10
    form.form(role='form', name='extraHouseForm', novalidate)
      .form-group(ng-repeat='feature in features')
        label.checkbox-inline.extra-form.pull-left(for='pool') {{feature.feature | titleCase}} &nbsp
          input.form-control(name='{{feature.feature}}', ng-model='feature.has', type='checkbox')
      .clearfix
      button.btn.btn-primary.pull-right.save-btn(ng-click='updateExtras()') Save
  .col-xs-1
