.row
  .col-xs-6.reccomendations
    h3 Suggested Goals
    p I would tell you things you need to do here.

  .col-xs-6
    h3 Set a goal
    form.form#goal-form(role='form', name='goalForm', novalidate)
      .form-group
        label(for='goalTitle') Goal
        input.form-control#goal-title(type='text', name='goalTitle', ng-model='goal.title', ng-minlength='5', required, placeholder='Tile the Kitchen Floor')
      .form-group
        label(for='goalTags') Tags
        input.form-control#goal-tag(type='text', name='goalTags', ng-model='goal.tags', ng-minlength='5', required, placeholder='Kitchen, Flooring')
      .form-group
        label(for='link') Complete By
        div#due(style='display:inline-block; min-height:290px;')
          datepicker(min-date='minDate' show-weeks='true' class='well well-sm', name='due', ng-model='goal.due', required)
      button.btn.btn-primary.pull-right(ng-show='goalForm.$valid', ng-click='addGoal()') Add Goal

    h2 Your Goals
    accordion(close-others='oneAtATime')
      accordion-group(ng-repeat='goal in goals')
        accordion-heading
          | {{goal.title}}
          i.pull-right.glyphicon(ng-class='{\'glyphicon-chevron-down\': status.open, \'glyphicon-chevron-right\': !status.open}')
        p(ng-repeat='task in goal.tasks') {{task.name}}
        form.form.task-form(role='form', name='taskForm', novalidate)
          .form-group
            .form-group.col-xs-8.task-name
              label(for='taskName')
              input.form-control#task-name(type='text', ng-model='goal.task.name', ng-minlength='3', required)
            .form-group.col-xs-3.task-rank
              label(for='taskRank')
              select#task-rank.form-control(ng-model='goal.task.rank', required)
                option(value='') Select the Rank
                option 1
                option 2
                option 3
                option 4
                option 5
                option 6
                option 7
                option 8
                option 9
                option 10
            .form-group.col-xs-1.task-add-btn
              button.btn(ng-click='addTask(goal)') +


