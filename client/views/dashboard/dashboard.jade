  .row
    .col-xs-6
      .goal
        div(accordion close-others='oneAtATime')
          accordion-group
            accordion-heading
              | Set a Goal
              i.fa.fa-fw.fa-plus.pull-right
            form.form#goal-form(role='form', name='goalForm', novalidate)
              .form-group
                input.form-control#goal-title(type='text', name='goalTitle', ng-model='goal.title', ng-minlength='5', required, placeholder='Goal Title')
              .form-group
                input.form-control#goal-tag(type='text', name='goalTags', ng-model='goal.tags', ng-minlength='5', required, placeholder='Tags')
              .form-group
                button.btn.btn-primary.pull-right(ng-show='goalForm.$valid', ng-click='addGoal()') Add Goal
        h3 Goals
        div.goal-list(accordion, close-others='oneAtATime')
          accordion-group(ng-repeat='goal in goals')
            accordion-heading
              | {{goal.title}}
              i.fa.fa-fw.fa-chevron-down.pull-right.glyphicon
            p.goal-complete-btn: a.btn.btn-warning.col-xs-12(ng-click='goalComplete(goal)') I completed this goal! &nbsp;
             i.fa.fa-fw.fa-trash-o
            form.form.task-form(role='form', name='taskForm', novalidate)
              .form-group
                .form-group.col-xs-11.task-name
                  label(for='taskName')
                  input.form-control#task-name(type='text', ng-model='goal.task.name', ng-minlength='3', required, placeholder='Add a Task')
                .form-group.col-xs-1.task-add-btn
                  button.btn(ng-click='addTask(goal)') +
            form.form(role='form', name='taskToggleForm')
            p.task-list(ng-repeat='task in goal.tasks | orderBy:sort', ng-class='{complete:task.isComplete}') {{task.name}}
              label.checkbox-inline.pull-right
                input#inlineCheckbox(type='checkbox', ng-model='task.isComplete', ng-change='taskComplete(goal)')
      .house
        h3 House Specs
          .edit.pull-right
            a(href='/#/specs')
              i.fa.fa-fw.fa-pencil
